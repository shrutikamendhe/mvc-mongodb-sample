@using Click2Cloud.Samples.AspNetCore.MvcMongoDb.Web.Models
@model List<Restaurants>
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>MVC with Mongodb</h1>
    <p class="lead">MVC appplication with Mongodb backend.</p>
</div>
<div class="row text-danger">
    @ViewBag.ClusterIPError
</div>

<div class="row">
    <h3 class="less-mixins-centering">MongoDb Documents</h3>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <td>Restaurant ID</td>
                    <td>Name</td>
                    <td>Cuisine</td>
                    <td>Address</td>
                </tr>
            </thead>
            @if (Model != null)
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.Label(Model[i].RestaurantId.ToString())
                        </td>
                        <td>
                            @Html.Label(Model[i].Name.ToString())
                        </td>
                        <td>
                            @Html.Label(Model[i].Cuisine.ToString())
                        </td>
                        <td>
                            @Html.Label(Model[i].Address.ToString())
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    <h3 class="less-mixins-centering">Add new Document</h3>
    @using (Html.BeginForm())
    {
        <form class="bs-example">
            <div class="form-group">
                <label for="name">Restaurant Name</label>
                <input type="text" class="form-control" id="txtRestName" name="restname" placeholder="Restaurant Name" required autofocus>
            </div>
            <div class="form-group">
                <label for="restaurantId">Restaurant Id</label>
                <input type="number" class="form-control" id="restaurantId" name="restaurantId" placeholder="Restaurant Id" required>
            </div>
            <div class="form-group">
                <label for="cuisine">Cuisine</label>
                <input type="text" class="form-control" id="cuisine" name="cuisine" placeholder="Cuisine" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" class="form-control" id="address" name="address" placeholder="Address">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    }
</div>
